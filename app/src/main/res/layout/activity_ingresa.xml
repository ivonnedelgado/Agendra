<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apps.ivonne.agenda.Ingresa">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="89dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefono: "
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="144dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/ediNomb"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/ediNomb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="27dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp" />

    <EditText
        android:id="@+id/ediNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="118dp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/ediNomb" />

    <Button
        android:id="@+id/bOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="246dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="96dp"
        android:onClick="ingresa"
        android:layout_below="@+id/ediNum"
        android:layout_alignEnd="@+id/ediNum" />
</RelativeLayout>
